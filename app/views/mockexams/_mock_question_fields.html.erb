<fieldset>
  <%= f.label :content, "Question" %><br />
  <%= f.input :content %><br />
  <%= f.check_box :_destroy %>
  <%= f.label :_destroy, "Remove Question" %>
  <%= f.simple_fields_for :mock_answers do |builder| %>
    <%= render 'mock_answer_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "Add Answer", f, :mock_answers %>
</fieldset>
